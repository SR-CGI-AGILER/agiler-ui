    <div class="layout-row layout-align-space-around-center">
        {{#paper-button raised=true fab=true onClick = (action 'markNew' task)}}C{{/paper-button}}
        {{#paper-button raised=true fab=true}}N{{/paper-button}}
        {{#paper-button raised=true fab=true}}P{{/paper-button}}
    </div> --}}
