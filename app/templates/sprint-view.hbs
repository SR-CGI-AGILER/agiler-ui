        MARK AS PENDING
    {{/paper-button}}
    {{!-- {{#paper-button raised=true onClick=(action "raisedButtonNew")}}
        MARK AS NEW
    {{/paper-button}}    --}}
    {{/if}}
        {{/paper-list}}
