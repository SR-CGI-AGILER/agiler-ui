{{activity-planner-navigation 
    onTabIndexChanged=(action "handleTabIndexChanged") 
    tabIndex=tabIndex 
    tabSubheading=tabSubheading }}

{{#liquid-if showUpdatesView class='showcategory'}}
{{#activity-planner-updates
    completedTasks=latestActivityPlan
    pendingTasks=latestActivityPlan
    newTasks=latestActivityPlan
    cancelled=latestActivityPlan}}
{{/activity-planner-updates}}
{{/liquid-if}}

{{#liquid-if showActivityPlanTab class='showcategory'}}
{{#activity-plan 
    tasks=latestActivityPlan 
    saveData=(action "saveToDb")}}
{{/activity-plan}}
{{/liquid-if}}


{{#liquid-if showScheduleTab class='showcategory'}}
{{#schedule-task 
    tasks=latestActivityPlan
    selectTask=(action "selectTask")}}
{{/schedule-task}}
{{/liquid-if}}

{{#liquid-if showBacklogsView class='showcategory'}}
    {{#activity-planner-backlogs 
        backlogTasks=latestActivityPlan
        selectTask=(action "selectTask") }}
    {{/activity-planner-backlogs}}
{{/liquid-if}}

{{#activity-planner-selected-tasks
selectedTasks=selectedTasks
currentTab=currentTab }}
{{/activity-planner-selected-tasks}}
