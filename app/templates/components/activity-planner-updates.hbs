{{yield}}

{{#if showCategoriesView}}
  This is the Categories view:
  {{#paper-list}}
    {{#paper-subheader}}Categories{{/paper-subheader}}
    {{#each categories as |category|}}
      {{#paper-item class="md-1-line" onClick=(action "selectCategory" category)}}
        <div class="md-list-item-text">
          <p>{{category}}</p>
        </div>
        <div class="md-secondary-container">
          {{paper-icon "navigate_next"}}
        </div>
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
{{/if}}

