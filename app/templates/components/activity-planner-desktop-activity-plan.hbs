{{yield}}

<div style="width:1500px">

{{#paper-card class="a" as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}Activity Plan{{/text.headline}}
         {{paper-divider}}
        {{#paper-list}}
        
        {{#each activityPlanTasks as |task|}}
          {{#paper-item}}
          {{task.text}}
          <p>@{{task.owner}}</p>
          {{/paper-item}}
          {{#if notPublished}}
          {{#draggable-dropzone dropped="addTask"}}
       <div style="height:40px; background-color:pink">
  Drop here
       </div>
  {{/draggable-dropzone}}
  {{/if}}
          {{/each}}
        {{#if notPublished}}
<div style="height:230px">
{{#draggable-dropzone dropped="addTask"}}
       <div style="height:40px; background-color:pink">
  Drop here
       </div>
  {{/draggable-dropzone}}
</div>
{{/if}}
        {{/paper-list}}
{{paper-input textarea=true block=true label="Add Task" passThru=(hash rows=1 maxRows=5) disabled=isPublished
  value=input onChange=(action (mut input))}}
  {{#paper-button iconButton=true onClick=(action "add")}}
  {{paper-icon "send"}}
  {{/paper-button}}
  {{#paper-button iconButton=true onClick=(action "publishActivityPlan")}}
  {{paper-icon "publish"}}
  {{/paper-button}}
        {{/title.text}}
      {{/card.title}}
    {{/paper-card}}
</div>