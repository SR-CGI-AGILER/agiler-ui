{{yield}}

{{#paper-tabs
  stretch=true
  
  selected=selectedBasicTab
  onChange=(action (mut selectedBasicTab)) as |tabs|}}
  {{#tabs.tab}}
    Scheduled Today
  {{/tabs.tab}}

  {{#tabs.tab}}
    Scheduled for Today
  {{/tabs.tab}}
  
{{/paper-tabs}}

{{#liquid-bind (hash tab=selectedBasicTab) class="md-padding" as |current|}}
  {{!-- <h1 class="md-display-2">Tab {{current.tab}}</h1> --}}
  {{#paper-list}}
    {{#paper-subheader}}
      {{#if current.tab}}
        Scheduled for Today
      {{else}}
        Scheduled Today
      {{/if}}
    {{/paper-subheader}}
    {{#each tasks as |category|}}
      {{#paper-item class="md-1-line"  as |controls|}}
        <div class="md-list-item-text">
          <p ontouchStart={{action "selectBand" category}} ontouchEnd={{action "unselectBand" category}}>{{category.text}}</p>
        </div>
        {{#if selected}}
      <div class="md-secondary-container ">
        {{controls.checkbox value=category.enabled onChange=(action (mut category.enabled))}}
      </div>
      {{/if}}
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
{{/liquid-bind}}

  
